# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/light_house?sslmode=disable

# JWT Secret (generate a strong random string for production)
JWT_SECRET=change-me-in-production

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=*

# Environment (development, staging, production)
ENVIRONMENT=development

# Email Configuration
# -------------------
# Production: Set SENDGRID_API_KEY
# Development: Uses Mailpit via SMTP (no API key needed)

# SendGrid API Key (required for production)
SENDGRID_API_KEY=

# SMTP Settings (for development with Mailpit)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=alerts@lighthouse.local

# Server port
PORT=8080
